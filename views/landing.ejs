<% pageTitle = 'Welcome' %>

<!-- Hero Banner (Mountain Background) -->
<div class="hero-banner mb-5">
    <h1>SlopeSense</h1>
    <p>Your community-driven platform for real-time mountain run conditions and hazard reporting.</p>

    <div class="mt-4">
        <a href="/register" class="btn btn-primary me-2">Get Started</a>
        <a href="/login" class="btn btn-light text-dark">Login</a>
    </div>
</div>

<!-- Three Features Section -->
<div class="container mt-5">

    <div class="row g-4">

        <!-- Report Conditions -->
        <div class="col-md-4">
            <a href="/reports" class="feature-image-card" style="--image: url('/images/bigspray.jpg')">
                <div class="feature-text-overlay">
                    <h3>Report Conditions</h3>
                    <p>Share updates on powder, ice, and hazards with fellow riders.</p>
                </div>
            </a>
        </div>

        <!-- View Slopes -->
        <div class="col-md-4">
            <a href="/slopes" class="feature-image-card" style="--image: url('/images/slopes.jpg')">
                <div class="feature-text-overlay">
                    <h3>View Slopes</h3>
                    <p>Browse detailed information on runs, their location, and difficulty.</p>
                </div>
            </a>
        </div>

        <!-- Connect -->
        <div class="col-md-4">
            <a href="/profile" class="feature-image-card" style="--image: url('/images/connect.jpg')">
                <div class="feature-text-overlay">
                    <h3>Connect</h3>
                    <p>Manage your profile and track all your submitted reports and slope entries.</p>
                </div>
            </a>
        </div>

    </div>

</div>
