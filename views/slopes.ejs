<% pageTitle = 'Slopes' %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Mountain Runs</h1>
</div>

<% if (locals.slopes && slopes.length) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% slopes.forEach(slope => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><%= slope.run_name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= slope.area %></h6>
                        <h6 class="card-subtitle mb-2 text-muted"><%= slope.resort %></h6>
                        <p class="card-text">
                            <strong>Difficulty:</strong> <span class="badge bg-<%= 
                                slope.difficulty.toLowerCase().includes('beginner') ? 'success' : 
                                slope.difficulty.toLowerCase().includes('intermediate') ? 'primary' : 
                                'danger' 
                            %>"><%= slope.difficulty %></span><br>
                        </p>
                        <a href="/slopeDetails/<%= slope.slope_id %>" class="btn btn-primary">More Details</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="alert alert-info text-center">
        No slopes have been added yet. Be the first!
    </div>
<% } %>